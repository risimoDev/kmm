{
  "name": "content-factory",
  "version": "2.0.0",
  "description": "Контент Завод - Автоматизированная платформа для массовой генерации короткого видео контента с помощью AI",
  "main": "index.js",
  "scripts": {
    "start": "docker-compose up -d",
    "stop": "docker-compose down",
    "restart": "docker-compose restart",
    "logs": "docker-compose logs -f",
    "logs:n8n": "docker-compose logs -f n8n",
    "logs:dashboard": "docker-compose logs -f dashboard",
    "status": "docker-compose ps",
    "clean": "docker-compose down -v",
    "backup": "node scripts/backup.js",
    "dev": "docker-compose up",
    "prod": "docker-compose --profile production up -d",
    "monitoring": "docker-compose --profile monitoring up -d",
    "init": "node scripts/init.js",
    "install:prod": "sudo bash scripts/install.sh",
    "deploy": "bash scripts/deploy.sh",
    "deploy:quick": "bash scripts/deploy.sh --quick",
    "deploy:rollback": "bash scripts/deploy.sh --rollback",
    "test:aggregators": "node scripts/test-aggregators.js"
  },
  "keywords": [
    "content-factory",
    "ai-video",
    "automation",
    "n8n",
    "social-media",
    "content-generation",
    "short-video",
    "reels",
    "shorts",
    "tiktok"
  ],
  "author": "Content Factory Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/content-factory.git"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "dotenv": "^16.3.1",
    "axios": "^1.6.0",
    "chalk": "^5.3.0",
    "ora": "^7.0.1"
  }
}
